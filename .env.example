# Database Configuration
DB_SERVER=host.docker.internal
DB_NAME=AfroMarket
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# Keycloak Database
KEYCLOAK_DB_NAME=KeycloakDB

# Keycloak Admin Credentials
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Keycloak Configuration
KEYCLOAK_REALM=afromarket
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8080
KEYCLOAK_SSL_REQUIRED=none

# Keycloak Client Credentials
KEYCLOAK_APIGATEWAY_CLIENT_ID=afromarket-api-gateway
KEYCLOAK_APIGATEWAY_CLIENT_SECRET=gateway-secret-dev
KEYCLOAK_MERCHANT_CLIENT_ID=afromarket-merchant-service
KEYCLOAK_MERCHANT_CLIENT_SECRET=merchant-secret-dev
KEYCLOAK_ADMIN_CLIENT_ID=afromarket-admin-service
KEYCLOAK_ADMIN_CLIENT_SECRET=admin-secret-dev
KEYCLOAK_SEARCH_CLIENT_ID=afromarket-search-service
KEYCLOAK_SEARCH_CLIENT_SECRET=search-secret-dev

# Frontend Client (Public)
KEYCLOAK_FRONTEND_CLIENT_ID=afromarket-frontend

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# OpenSearch Configuration
OPENSEARCH_URI=http://opensearch:9200

# Environment
ASPNETCORE_ENVIRONMENT=Development
