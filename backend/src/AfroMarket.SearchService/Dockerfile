FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["src/AfroMarket.SearchService/AfroMarket.SearchService.csproj", "src/AfroMarket.SearchService/"]
RUN dotnet restore "src/AfroMarket.SearchService/AfroMarket.SearchService.csproj"
COPY . .
WORKDIR "/src/src/AfroMarket.SearchService"
RUN dotnet build "AfroMarket.SearchService.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "AfroMarket.SearchService.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "AfroMarket.SearchService.dll"]
